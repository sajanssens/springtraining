<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="printer" class="com.example.ConsolePrinter"></bean>
    <bean id="cPrinter" class="com.example.FilePrinter"></bean>

    <bean id="client" class="com.example.Client">
        <constructor-arg index="0" ref="printer"></constructor-arg>
        <constructor-arg index="1" ref="cPrinter"></constructor-arg>
    </bean>

    <bean id="client2" class="com.example.ClientSetter" lazy-init="false" init-method="myinit">
        <property name="printer" ref="printer"></property>
        <property name="printer2" ref="cPrinter"></property>
    </bean>

</beans>